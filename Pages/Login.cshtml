@page
@model ClaimsPoe.Pages.LoginModel
@{
}



<div class="add-body">
    <div class="ab-para">
        <h1>Login </h1>
        <h2>Form for users to login</h2>
        <p>
            Ensure that all fields are entered
        </p>
    </div>

    <form method="post" class="claim-form">
        <div class="form-section">
                    <label class="form-label" asp-for="Model.Email">Email Address</label>
                    <input type="text" asp-for="Model.Email"  />
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>
        <div class="form-section">
                    <label class="form-label" asp-for="Model.Password">Password</label>
                    <input type="password" asp-for="Model.Password"  />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
        <div class="form-section">
                    <input type="checkbox" asp-for="Model.RememberMe"  />
                    <label class="form-label" asp-for="Model.RememberMe">Remember Me?</label>
                </div>
        <div class="form-section">
            <button type="submit" class="btn-submit">Login</button>
                </div>
            </form>
</div>
    

